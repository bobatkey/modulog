module type Edges = sig
  type vertex

  edge : vertex * vertex
end

module MyEdges = struct
  type vertex = int

  define edge : vertex * vertex
    edge(1, 2)
    edge(2, 3)
    edge(3, 4)
    edge(4, 1)
end

module Path (E : Edges) = struct

  type vertex = E.vertex

  define path : E.vertex * E.vertex
    path(?X,?Y) :- E.edge(?X,?Y)
    path(?X,?Z) :- path(?X,?Y), E.edge(?Y,?Z)

end

module P = Path (MyEdges)
